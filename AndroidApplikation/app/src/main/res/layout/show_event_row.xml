<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/white"
    android:elevation="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/controls_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="invisible">

                <ImageButton
                    android:id="@+id/event_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/ripple_oval"
                    android:elevation="8dp"
                    android:src="@drawable/ic_edit_black_24dp" />

                <ImageButton
                    android:id="@+id/event_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:elevation="8dp"
                    android:background="@drawable/ripple_oval"
                    android:src="@drawable/ic_delete_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/admin_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:background="@drawable/admin_border"
                android:padding="2dp"
                android:text="@string/admin_tag"
                android:textColor="@color/textGreenColor"
                android:textSize="20sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/controls_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY" />


            <TextView

                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <ImageView
                android:id="@+id/arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/event_date"
                android:contentDescription="calendar"
                android:src="@drawable/ic_time" />

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:layout_marginStart="20dp"
                android:contentDescription="time"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/event_name"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/image_calendar"
                android:text="date"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/event_name"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/image_time"
                android:text="time"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/event_time"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:maxLength="100"
                android:text="description"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_description"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="gone" />


            <Button
                android:id="@+id/map_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_location"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent"
                android:text="See Event Location on Google Maps"
                android:drawableRight="@drawable/ic_pin_drop_black_24dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/join_event"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_date"
                android:layout_alignLeft="@+id/event_description"
                android:layout_marginLeft="257dp"
                android:layout_marginTop="-52dp"
                android:onClick="joinEvent"
                android:text="Join"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/unjoin_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_date"
                android:layout_alignLeft="@+id/event_description"
                android:layout_marginLeft="257dp"
                android:layout_marginTop="-52dp"
                android:onClick="unjoinEvent"
                android:text="JOINED"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>